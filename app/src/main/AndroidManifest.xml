<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sofrosyn.tech.com.orpheus">
<uses-permission android:name="android.permission.INTERNET"/>

	<application

			android:allowBackup="true"
			android:icon="@drawable/wsacademy_logo"
			android:label="@string/app_name"
			android:roundIcon="@drawable/wsc"
			android:supportsRtl="true"
			android:theme="@style/AppThemeNoBar">

		<meta-data
				android:name="co.paystack.android.PublicKey"
				android:value="@string/test"/>

		<activity android:name=".SplashActivity" android:theme="@style/AppThemeNoBar" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>


		<activity android:name=".IntroActivity"
		          android:theme="@style/AppThemeNoBar"
		          android:parentActivityName=".MainActivity"> </activity>


		<activity android:name=".AdminActivity"
		          android:theme="@style/AppThemeNoBar"
		          android:parentActivityName=".MainActivity"> </activity>


		<activity android:name=".MainActivity"
		          android:theme="@style/AppThemeNoBar"
		          android:parentActivityName=".MainActivity"> </activity>


		<activity android:name=".JoinClassActivity" android:label="@string/join_class"
					android:theme="@style/AppTheme"
					android:parentActivityName=".MainActivity"> </activity>

		<activity android:name=".BootCampActivity" android:label="@string/BootCamp"
		          android:theme="@style/AppTheme"
		          android:parentActivityName=".MainActivity"> </activity>


		<activity android:name=".CurriculumActivity"
		          android:theme="@style/AppTheme" android:label="@string/Curriculum"
					android:parentActivityName=".MainActivity"> </activity>

		<activity android:name=".ControllerActivity" android:label="Admin panel"
		          android:parentActivityName=".MainActivity"> </activity>

		<activity android:name=".FeedsActivity" android:theme="@style/AppTheme" android:label="@string/Feeds"
		          android:parentActivityName=".MainActivity"> </activity>

		<activity android:name=".PaystackActivity" android:label="@string/pay"
		          android:theme="@style/AppTheme">
		          </activity>
		<activity android:name=".LoginActivity" android:theme="@style/AppThemeNoBar" android:label="Login"
		          > </activity>

		<activity android:name=".SignUpActivity" android:theme="@style/AppThemeNoBar" android:label="SignUp"
		          > </activity>

		<activity android:name=".ResetPasswordActivity" android:theme="@style/AppThemeNoBar" android:label="SignUp"
					android:parentActivityName=".LoginActivity"> </activity>


	</application>

</manifest>