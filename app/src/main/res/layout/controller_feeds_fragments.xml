<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical">


		<EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/FeedMessage"
		          android:hint="Type a message" android:layout_centerInParent="true" android:inputType="text" android:maxLines="8"/>
		<android.support.design.widget.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:layout_margin="16dp"
				android:id="@+id/controllerFeed_floatbutton"
				app:backgroundTint="@color/drei1"
				android:src="@drawable/ic_rss_feed_black_24dp"
				/>
	</RelativeLayout>
